@using HW1c.Models;
@model ReportViewModel

@{
    ViewBag.Title = "Index";
}
<div class="container-fluid">
    <br />
    <h2 class="text-primary">Report A</h2>
    <br />
</div>

<div class="container">
    <div class="row">
        <div class="col-2">
            <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                <a class="nav-link active" id="v-pills-app-tab" data-toggle="pill" href="#v-pills-app" role="tab" aria-controls="v-pills-app" aria-selected="true">App Usage</a>
                <a class="nav-link" id="v-pills-test-tab" data-toggle="pill" href="#v-pills-test" role="tab" aria-controls="v-pills-test" aria-selected="false">Test Accuracy</a>
                <a class="nav-link" id="v-pills-detail-tab" data-toggle="pill" href="#v-pills-detail" role="tab" aria-controls="v-pills-detail" aria-selected="false">More Detail</a>
            </div>
            <div class="tab-content" id="v-pills-tabContent">
                <div class="tab-pane fade show active" id="v-pills-app" role="tabpanel" aria-labelledby="v-pills-app-tab">...</div>
                <div class="tab-pane fade" id="v-pills-test" role="tabpanel" aria-labelledby="v-pills-test-tab">...</div>
                <div class="tab-pane fade" id="v-pills-detail" role="tabpanel" aria-labelledby="v-pills-detail-tab">...</div>
            </div>
        </div>
        <div class="col">
            <div class="row">
                <div class="col-4 border">
                    <br />
                    <h2 class="text-center">Current users</h2>
                    <br />
                    <br />
                    <h1 class="text-center text-success">@Model.NumberOfUsers</h1>
                </div>
                <div class="col text-center">
                    <img src="~/Content/Img/LineChart.PNG" height="300" class="ChartBox" />
                </div>
            </div>
            <br />
            <br />
            <div class="row text-center">
                <div class="col">
                    <div class="col">
                        <div>
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">Date</th>
                                        <th scope="col">App Version</th>
                                        <th scope="col">Phone ID</th>
                                        <th scope="col">Location</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (var item in Model.LogViewModel.LogList)
                                        {
                                            <tr>
                                                <td>@item.RecordedDateTime.ToShortDateString()</td>
                                                <td>@item.AppVersion</td>
                                                <td>@item.PhoneID</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

